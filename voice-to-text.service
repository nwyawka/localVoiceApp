[Unit]
Description=Local Voice-to-Text Service
After=graphical.target

[Service]
Type=simple
WorkingDirectory=/home/mattuh/Desktop/DataWerkes/localVoiceApp
ExecStart=/usr/bin/node /home/mattuh/Desktop/DataWerkes/localVoiceApp/index.js
Restart=always
RestartSec=5
